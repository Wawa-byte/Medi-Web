{
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    }
  },
  "hosting": {
    "public": "/",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/widget",
        "destination": "/widget.html"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  },
  "ignore": [
    "firebase.json",
    "**/.*",
    "**/node_modules/**"
    ]
}
